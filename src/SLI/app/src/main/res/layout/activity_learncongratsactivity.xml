<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".learncongratsactivity">

    <Button
        android:id="@+id/predictlinkbtn"
        android:layout_width="334dp"
        android:layout_height="98dp"
        android:layout_marginTop="16dp"
        android:text="Predict"
        android:textSize="50sp"
        app:backgroundTint="#000000"
        android:textColor="#FBFBFB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/predicttxt" />

    <Button
        android:id="@+id/sppeaklinkbtn"
        android:layout_width="334dp"
        android:layout_height="98dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="44dp"
        android:text="Speak"
        android:textColor="#FBFBFB"
        android:textSize="50sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speaktxt" />

    <TextView
        android:id="@+id/predicttxt"
        android:layout_width="370dp"
        android:layout_height="201dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:text="Well that's the end of the road here.Try out our mode and check out how well it works in predict feature!."
        android:textAlignment="center"
        android:textColor="#050505"
        android:listSelector="#00000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/speaktxt"
        android:layout_width="378dp"
        android:layout_height="135dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:text="    Or wanna checkout more signs try out our speak feature."
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="30sp"
        android:textStyle="bold"
        android:listSelector="#00000000"
        app:layout_constraintBottom_toTopOf="@+id/sppeaklinkbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/predictlinkbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>